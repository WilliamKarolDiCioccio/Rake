{
  "tasks": [
    {
      "type": "shell",
      "group": "build",
      "label": "Generate project files",
      "windows": {
        "command": "${workspaceFolder}\\scripts\\generate_projects_win32.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/scripts/generate_projects_linux.sh"
      },
      "presentation": {
        "echo": false,
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "type": "shell",
      "group": "build",
      "label": "Compile shaders",
      "windows": {
        "command": "${workspaceFolder}\\scripts\\compile_shaders_win32.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/scripts/compile_shaders_linux.sh"
      },
      "presentation": {
        "echo": false,
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "type": "shell",
      "group": "build",
      "label": "Install tools",
      "windows": {
        "command": "${workspaceFolder}\\scripts\\install_tools_win32.ps1"
      },
      "linux": {
        "command": "sudo ${workspaceFolder}/scripts/install_tools_linux.sh"
      },
      "presentation": {
        "echo": false,
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "type": "shell",
      "group": "build",
      "label": "Download libraries",
      "windows": {
        "command": "python ${workspaceFolder}\\scripts\\download_libraries.py"
      },
      "linux": {
        "command": "echo \"Not needed on Linux\""
      },
      "presentation": {
        "echo": false,
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    }
  ],
  "version": "2.0.0"
}
